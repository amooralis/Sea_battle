<!--  Main view  "/"  -->
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/myStats.css">
    <title>{{title}}</title>
</head>
<body>
<header>
    <div class="header">
        <div class="nav">
            <div class="menu__item" id="play">
                <div class="menu__img">
                    <img src="./img/game.png" alt="">
                </div>
                <p>Play</p>
            </div>
            <div class="menu__item is-active" id="stats">
                <div class="menu__img">
                    <img src="./img/user.png" alt="">
                </div>
                <p>Stats</p>
            </div>
            <div class="menu__item" id="best">
                <div class="menu__img">
                    <img src="./img/best_players.png" alt="">
                </div>
                <p>Best Players</p>
            </div>
        </div>
        <div class="logout">
            <div class="menu__item" id="logout">
                <div class="menu__img">
                    <img src="./img/logout.png" alt="">
                </div>
                <p>logout</p>
            </div>
        </div>
    </div>
</header>
<main id="main" class="main">
    {{#if statistics}}
        <h2>GAME STATISTICS:</h2>
        <table>
            <tr style="background-color: #91bdff">
                <th>Всего кораблей уничтожено:</th>
                <td>{{statistics.totalShips}}</td>
            </tr>
            <tr>
                <th colspan="2" style="text-align: center">Из них:</th>
            </tr>
            <tr>
                <th>█ █ █ █</th>
                <td>{{statistics.totalDestroyedShip4}}</td>
            </tr>
            <tr>
                <th>█ █ █</th>
                <td>{{statistics.totalDestroyedShip3}}</td>
            </tr>
            <tr>
                <th>█ █</th>
                <td>{{statistics.totalDestroyedShip2}}</td>
            </tr>
            <tr>
                <th>█</th>
                <td>{{statistics.totalDestroyedShip1}}</td>
            </tr>
            <tr style="background-color: #eeabff">
                <th>Всего игр сыграно:</th>
                <td>{{statistics.totalGames}}</td>
            </tr>
            <tr style="background-color: #fde686">
                <th>Процент выигрышей:</th>
                <td>{{statistics.winRate}}%</td>
            </tr>
        </table>
    {{else}}
        <h3 class="error">Статистику невозможно посчитать. Вы пока не сыграли ни одной игры.</h3>
    {{/if}}
</main>
<script src="scripts/index.js"></script>
</body>
</html>